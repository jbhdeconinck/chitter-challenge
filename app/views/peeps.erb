<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <h1>Peeps</h1>
    <ul id='peeps'>
      <% @peeps.each do |peep| %>
        Content: <textarea type="text" cols="86" rows ="20"><%= peep.content %></textarea>
        <li>
        Author:   <%= peep.user.name %>
        Time: <%= peep.time %>
        </li>
      <% end %>
    </ul>
  </body>
</html>
